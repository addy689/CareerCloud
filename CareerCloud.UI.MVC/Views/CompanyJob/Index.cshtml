@model IEnumerable<CareerCloud.UI.MVC.Models.CompanyJobVM>

@{
    ViewBag.Title = "CompanyJobs";
}

<h2>Jobs Listing</h2>
<h4>Company: @ViewBag.CompanyName</h4>
<br />
<p>
    @Html.ActionLink("+ Add New Job", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatePosted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsInactive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsInternalPosition)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatePosted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsInactive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsInternalPosition)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>


<p>
    @Html.ActionLink("Back to list of Companies", "Index", "Company", null, null)
</p>
@model IEnumerable<CareerCloud.UI.MVC.Models.CompanyJobsListVM>

@{
    ViewBag.Title = "CompanyJobs";
}

<h2>Jobs Listing</h2>
<h4>Company: @ViewBag.CompanyName</h4>
<br />
<p>
    <b>@Html.ActionLink("+ Add New Job", "Create", new { companyId = ViewBag.CompanyId })</b>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatePosted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsInactive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsInternalPosition)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePosted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsInactive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsInternalPosition)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                <b>@Html.ActionLink("Details", "Details", new { jobId = item.Id, companyId = ViewBag.CompanyId })</b> |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>


<p>
    <b>@Html.ActionLink("Back to list of Companies", "Index", "Company", null, null)</b>
</p>
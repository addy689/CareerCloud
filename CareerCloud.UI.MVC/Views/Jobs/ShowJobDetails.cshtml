@model CareerCloud.UI.MVC.Models.JobDetailsVM

@{
    ViewBag.Title = "ShowJobDetails";
}

<style>
    dt, dd {
        display: block;
        margin-top: 20px;
    }

</style> 

<h2>Job Details</h2>

<div>
    <h4>@Html.DisplayNameFor(model => model.Title) : @Html.DisplayFor(model => model.Title)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dd></dd>
        <dt>
            @Html.DisplayNameFor(model => model.DatePosted)
        </dt>
        
        <dd>
            @Html.DisplayFor(model => model.DatePosted)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Company)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Company)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Skills)
        </dt>

        <dd>
            <ul>
                @foreach (var item in Model.Skills)
                {
                    <li>@item</li>
                }
            </ul>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Education)
        </dt>

        <dd>
            <ul>
                @foreach (var item in Model.Education)
                {
                    <li>@item</li>
                }
            </ul>
        </dd>

    </dl>
</div>

<br/>
@using (Html.BeginForm("Create", "ApplicantJobApplication"))
{
    @Html.Hidden(@Html.DisplayNameFor(model => model.ApplicantId).ToHtmlString(), Model.ApplicantId)
    @Html.Hidden(@Html.DisplayNameFor(model => model.JobId).ToHtmlString(), Model.JobId)
    @*@Html.HiddenFor(model => model.JobId)*@

    <input type="submit" value="Apply" class="btn btn-primary btn-default"/>
}